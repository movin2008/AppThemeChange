<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/text_test"
            android:textColor="@color/colorTest" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/text_test"
            android:onClick="test"
            android:background="@null"
            android:textColor="@color/selector_text_color" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:thumb="@drawable/drawable_shap"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/home_phone" />

        <com.shuiyes.overlaytest.widget.CImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/drawable_shap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_atest" />

    </LinearLayout>
</ScrollView>